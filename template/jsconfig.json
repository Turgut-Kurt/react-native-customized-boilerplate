{
    "compilerOptions": {
        "jsx": "react",
        "target": "es2020",
        "baseUrl": ".",
        "module": "commonjs",
        "paths": {
            "~/*": [
                "./src/*"
            ],
            "~assets": [
                "./src/assets/index"
            ],
            "~components": [
                "./src/components/index"
            ],
            "~config": [
                "./src/config/index"
            ],
            "~hooks": [
                "./src/hooks/index"
            ],
            "~locales": [
                "./src/locales/index"
            ],
            "~navigation": [
                "./src/navigation/index"
            ],
            "~schema": [
                "./src/schema/index"
            ],
            "~screens": [
                "./src/screens/index"
            ],
            "~store": [
                "./src/store/index"
            ],
            "~utils": [
                "./src/utils/index"
            ]
        }
    },
    "exclude": [
        "./node_modules"
    ]
}